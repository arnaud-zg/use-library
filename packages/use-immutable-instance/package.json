{
  "name": "use-immutable-instance",
  "version": "0.0.5",
  "description": "Use immutable class instances in React",
  "type": "module",
  "main": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm test:run && pnpm build"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@testing-library/react": "^14.3.1",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "esbuild": "^0.25.12",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "react",
    "immutable",
    "state",
    "domain-logic"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arnaud-zg/use-library.git",
    "directory": "packages/use-immutable-instance"
  },
  "bugs": {
    "url": "https://github.com/arnaud-zg/use-library/issues"
  },
  "homepage": "https://github.com/arnaud-zg/use-library#readme",
